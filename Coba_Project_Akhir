

tugas = []

def tambah_tugas(nama_tugas):
    tugas.append(nama_tugas)
    print(f"Tugas '{nama_tugas}' berhasil ditambahkan.")

def lihat_tugas():
    if not tugas:
        print("Tidak ada tugas saat ini.")
    else:
        print("\nDaftar Tugas:")
        for i, t in enumerate(tugas):
            print(f"{i+1}. {t}")

def hapus_tugas(nomor_tugas):
    try:
        indeks_tugas = int(nomor_tugas) - 1
        if 0 <= indeks_tugas < len(tugas):
            tugas.pop(indeks_tugas)
            print("Tugas berhasil dihapus.")
        else:
            print("Nomor tugas tidak valid.")
    except ValueError:
        print("Masukkan harus berupa angka.")

while True:
    print("\nPilihan:")
    print("1. Tambah Tugas")
    print("2. Lihat Tugas")
    print("3. Hapus Tugas")
    print("4. Keluar")

    pilihan = input("Pilih tindakan (1/2/3/4): ")

    if pilihan == '1':
        nama = input("Masukkan nama tugas: ")
        tambah_tugas(nama)
    elif pilihan == '2':
        lihat_tugas()
    elif pilihan == '3':
        nomor = input("Masukkan nomor tugas yang ingin dihapus: ")
        hapus_tugas(nomor)
    elif pilihan == '4':
        print("Terima kasih! Aplikasi ditutup.")
        break
    else:
        print("Pilihan tidak valid.")

